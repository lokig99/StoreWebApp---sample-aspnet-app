@model IEnumerable<StoreWebApp.Models.CartItem>


@{
    ViewData["Title"] = "Shop";
}

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Article.ImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Article.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Article.Price)
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{ var imgPath = string.IsNullOrEmpty(item.Article.ImagePath) ? "/image/no-image.png" : "/upload/" + item.Article.ImagePath;}
                        <img src=@imgPath class="img-thumbnail" style="max-width:400px;height:200px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Article.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Article.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddCart", "Shop", new { articleID = item.Article.ID })'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Shopping Cart is empty!</h2>
} 